<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="false"
    android:padding="20dp"
    tools:context=".Fragments.Fragment1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Hi!"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Are You?"
            android:textColor="@color/light_grey" />

        <RadioGroup
            android:id="@+id/frag1_gender_radioGp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/frag1_male_radio"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/male"

                android:text="Male"
                android:textColor="#00000000"
                android:textColorHighlight="#00000000"
                android:textColorHint="#00000000"
                android:textColorLink="#00000000" />

            <RadioButton
                android:id="@+id/frag1_female_radio"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/female"
                android:text="Female"
                android:textColor="#00000000"
                android:textColorHighlight="#00000000"
                android:textColorHint="#00000000"
                android:textColorLink="#00000000"
                />
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/frag1_nxt_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif-condensed"

        android:text="Next" />

</RelativeLayout>
