<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_focused="true">

        <shape android:shape="rectangle">
            <gradient android:angle="90" android:startColor="@color/blue_A700"
                android:centerColor="@color/blue_A400"
                android:endColor="@color/blue_A100"
                android:type="linear"></gradient>

            <corners android:radius="25dp"></corners>
        </shape>

    </item>
    <item  android:state_focused="false">

        <shape android:shape="rectangle">
            <gradient android:angle="135" android:startColor="#882962FF"
                android:centerColor="#77448AFF"
                android:endColor="#3382B1FF"
                android:type="linear"></gradient>

            <corners android:radius="25dp"></corners>
        </shape>

    </item>
</selector>